<Window x:Class="FilePicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilePicker"
        mc:Ignorable="d"
        Title="File Picker" Height="500" Width="1200">

    <Window.Resources>
        <ResourceDictionary Source="ButtonStyle.xaml"></ResourceDictionary>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#9900ff" Offset="1.0" />
            <GradientStop Color="#4400ff" Offset="0.00" />
        </LinearGradientBrush>
    </Window.Background>
    
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Name="DefaultBtn" Content="▶" Click="DefaultView" />
            <Button Name="SettingsBtn" Content="⚙" Click="SettingsView" />
            <Button Name="ScanFiles" Content="🔎" Click="Scan"></Button>
            <Button Name="Info" Content="❓" Click="HelpView"></Button>
        </StackPanel>
    <ContentControl x:Name="contentControl" Grid.Row="1"/>
    </Grid>

</Window>